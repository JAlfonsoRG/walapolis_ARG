<% if user.show_phone? || user.show_email? %>
  <div class="card mt-4">
    <div class="card-header"><h4>Hablar con <%= user.first_name.titleize %></h4></div>
    <div class="card-body">
      <% if user.show_phone? && user.phone.present? %>
        <div>
            <%= link_to "<i class='fab fa-whatsapp'></i> Enviar WhatsApp".html_safe, "https://api.whatsapp.com/send?phone=521#{user.phone}&text=Hola #{user.first_name}, me gustaría colaborar en tu propuesta publicada en #{request.protocol}#{request.host_with_port}#{request.fullpath} ¿Platicamos?", target: "_blank", class: 'btn btn-outline-primary btn-block' %>
        </div>
      <% end %>
      <% if user.show_email? %>
        <div class="mt-3">
            <%= link_to "<i class='fas fa-envelope'></i>Enviar Email".html_safe, "mailto: #{user.email}?subject=Quiero participar en tu idea&body=Hola #{user.first_name}, me gustaría colaborar en tu propuesta publicada en #{request.protocol}#{request.host_with_port}#{request.fullpath} ¿Platicamos?", class: 'btn btn-outline-primary btn-block' %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>