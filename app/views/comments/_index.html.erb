<ul class="list-unstyled">
    <% @comments.each do |comment| %>
      <li class="mt-3">
        <i class='fas fa-user-circle fa-3x'></i>
        <%= link_to comment.user.full_name, nil %><br>
        <%= comment.body  %> - <small><%= comment.created_at.strftime("%d/%m/%y a las %l:%M %p") %></small> <br>
        <% if comment.user == current_user %>
          <div id="comment-controls">
              <span>
                  <small><%= link_to "<i class='far fa-edit'></i> Editar".html_safe, edit_comment_path(comment), class: 'text-primary' %></small>
                  <small><%= link_to "<i class='fas fa-trash'></i> Eliminar".html_safe, comment_path(comment.id), method: :delete, data: {confirm: 'Â¿Estas seguro de borrar el comentario?'}, class: 'text-danger' %></small>
                </span>
          </div>
        <% end %>
      </li>
    <% end %>
</ul>