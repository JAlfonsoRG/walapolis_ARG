<%= render 'layouts/shared/greetings' %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="row">
      <div class="form-group col-sm-6">
        <%= f.text_field :full_name, autofocus: true, class: 'form-control', placeholder: 'Nombre completo' %>
      </div>

      <div class="form-group col-sm-6">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Email' %>
      </div>
  </div>

  <div class="row">
      <div class="form-group col-sm-6">
        <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Contraseña' %>
        <% if @minimum_password_length %>
        <small class="text-muted">(<%= @minimum_password_length %> caracteres minimo)</small>
        <% end %>
      </div>
    
      <div class="form-group col-sm-6">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Confirma tu contraseña' %>
      </div>
  </div>

  <div class="form-group">
    <%= f.submit "Crear mi cuenta", class: 'btn-primary form-control' %>
  </div>
<% end %>

<hr>
<div class="text-center text-muted">
  <p>También puedes crear tu cuenta a través de</p>
</div>

<div class="row">
  <div class="col-sm-6">
    <%= link_to "<i class='fab fa-facebook'></i> Registrarme con Facebook".html_safe, user_facebook_omniauth_authorize_path, class: 'btn btn-success btn-block' %>
  </div>
  <div class="col-sm-6">
    <%= link_to "<i class='fab fa-google'></i> Registrarme con Google".html_safe, user_google_oauth2_omniauth_authorize_path, class: 'btn btn-success btn-block' %>
  </div>
</div>

  <div class="text-center">
    <%= render "users/shared/links" %>
  </div>
